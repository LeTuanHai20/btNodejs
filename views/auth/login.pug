extends ../layouts/common.pug
block content
    h1 Login
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST")
        .form-group
        lable(for="email") Email
        input#email.form-control.mb-2(type="text",name="email",value=values?value=values.email:value="")
        br
        lable(for="pass") Password
        input#pass.form-control.mb-2(type="number",name="pass",value=values?value=values.pass:value="")
        button.btn.btn-primary Login